@model CategoryIndexModel

<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-4"><strong>Id</strong></div>
                <div class="col-md-4"><strong>Name</strong></div>

            </div>
            @foreach (var item in Model.Categories)
            {
                <div class="row">
                    <div class="col-md-4">@item.Id</div>
                    <div class="col-md-4">@item.Name</div>

                    <div class="col-md-4 row">
                        @Html.ActionLink("Düzenle", "Update", "Category", new { Id = item.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Sil", "Delete", "Category", new { Id = item.Id }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("Detay", "Detail", "Category", new { Id = item.Id }, new { @class = "btn btn-success" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>